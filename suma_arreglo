#include <iostream>
using namespace std;

int main() {
    const int TAMANO = 5;
    int arreglo[TAMANO];
    int suma = 0;
    
    cout << "=== SUMA DE ELEMENTOS DE UN ARREGLO ===" << endl;
    cout << "Ingrese 5 numeros enteros:" << endl;
    
    for (int i = 0; i < TAMANO; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> arreglo[i];
    }
    
    for (int i = 0; i < TAMANO; i++) {
        suma += arreglo[i];
    }
    
    cout << "\nEl arreglo ingresado es: ";
    for (int i = 0; i < TAMANO; i++) {
        cout << arreglo[i] << " ";
    }
    
    cout << "\nLa suma de los elementos es: " << suma << endl;
    
    return 0;
}
